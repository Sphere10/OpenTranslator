@model OpenTranslator.Models.Input.TranslationInput
	@using (Html.BeginForm())
	{
		<span style="color:red; margin-left:120px">@ViewBag.errormsg</span>
		<input type="file" name="postedFile" id="postedFile" />
		<input type="submit" id="upload" value="Import" />
	}
<br /><br />

<script>
	$(function () {
		$('#upload').click(function () {
			debugger;
			var $file = document.getElementById('postedFile'),
				$formData = new FormData();

			if ($file.files.length > 0) {
				for (var i = 0; i < $file.files.length; i++) {
					$formData.append('file-' + i, $file.files[i]);
				}
			}

			$.ajax({
				url: '/PascalTranslation/GetUploadedFile',
				type: 'POST',
				data: $formData,
				dataType: 'json',
				contentType: false,
				processData: false,
				success: function ($data) {

				}
			});
		});
		});
</script>

